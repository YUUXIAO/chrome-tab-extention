{
  "short_name": "Chrome窗口插件V3",
  "name": "tab_manage_extension",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "extension",
    "history",
    "background",
    "unlimitedStorage",
    "declarativeNetRequest",
    "identity",
    "storage",
    "pageCapture"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "./logo.png",
      "32": "./logo.png",
      "48": "./logo.png",
      "128": "./logo.png"
    },
    "default_title": "窗口管理器"
  },
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
