{
  "short_name": "标签管理器",
  "name": "TabsManager",
  "version": "1.1.5",
  "manifest_version": 3,
  "permissions": ["storage", "contextMenus", "tabs", "background", "bookmarks"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "./logo.png",
      "32": "./logo.png",
      "48": "./logo.png",
      "128": "./logo.png"
    },
    "default_title": "窗口管理器"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
